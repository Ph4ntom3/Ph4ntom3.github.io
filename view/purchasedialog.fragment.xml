<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="purchaseDialog"
        title="{i18n>purchaseDialogTitle}" 
        class="sapUiContentPadding">
        <content>
            <Slider
            id="numBottles"
            min="1"
            max="20"
            value="{view>/numBottles}"
            width="100%"
            liveChange=".onNumBottlesChange"/>
            <ObjectNumber
                id="numBottlesDisplay"
                emphasized="false"
                number="{view>/numBottles}"
                unit=" {i18n>bottles}"
                textAlign="Center"/>
        </content>
        <beginButton>
            <Button
                text="{i18n>popupBegin}"
                type="Emphasized"
                press=".onBuyMultiple"/>
        </beginButton>
        <endButton>
            <Button
                text="{i18n>popupClose}"
                press=".onPurchaseDialogClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>